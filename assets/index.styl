@import 'quill/dist/quill.snow.css'
@import './dialog.styl'

color-theme = #38c3a1

.ql-toolbar.ql-snow
  background-color #fafafa
  border-color #dcdfe6
  border-bottom 1px solid #f2f2f2
  padding 2px 4px
  border-top-left-radius 4px
  border-top-right-radius 4px

  &.on-focus 
    border-color color-theme
    border-bottom-color #f2f2f2

  .icon 
    fill #444

  .ql-import 
    background url('./images/ic_spot.png') center no-repeat
  

  .ql-option
  .ql-question
    width 64px
    background url('./images/ic_question.png') center no-repeat

  button
    &.ql-active
    &:hover
    &:focus
      .ql-stroke 
        stroke color-theme

      .ql-fill
      .icon 
        fill color-theme
    &:focus
      outline none

.ql-container
  color #333
  border-top none
  border-color #dcdfe6
  padding-bottom 20px
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px

  &.ql-snow.on-focus 
    border-color color-theme

  .ql-editor
    padding 10px 10px 0

    &.ql-blank:before 
      left 10px
      right 10px
      color #b2b2b2
      font-size 12px
      font-style normal

    img
      display inline-block

  .ql-word-count
    font-size 12px
    color #b2b2b2
    position absolute
    bottom 1px
    right 5px

  .ql-word-entered
    color #666

point
  position relative
  margin-bottom 10px
  display inline-block
  text-indent 0 !important

  &:after 
    content ''
    width 0.2em
    height 0.2em
    position absolute
    bottom -5px
    left 50%
    border-radius 50%
    -webkit-transform translate(-50%)
    transform translate(-50%)
    background-color #000

sub-question
sub-option
  display inline-block
  line-height 14px
  border-bottom 1px solid #000
  padding 0 5px
  white-space nowrap